<!DOCTYPE html>
<html>

   <head>
      <% include ../static/partials/head.ejs %>
   </head>

   <body>
      <% include ../static/partials/navbar.ejs %>

      <main class="container">
         <% include ../static/partials/messages.ejs %>

         <% if(wiki.private == true && currentUser.isPremium() && currentUser.id === wiki.userId || currentUser.isAdmin()) { %>
            <a class="btn btn-primary float-right" href="collaborators/" role="button"> Add Collaborators </a>
         <% } %>
         <h1>Edit Wiki</h1>
         <form action="/wikis/<%= wiki.id %>/update" method="post">
            <div class="form-group">
               <label for="title">Wiki Title</label>
               <input value="<%= wiki.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
               <small class="text-muted" id="titleHelp">Title must be 5 or more characters in length. </small>
            </div>
            <div class="form-group">
               <label for="body">Description</label>
               <textarea rows="15" class="form-control" name="body" placeholder="Enter Description"><%= wiki.body %></textarea>
               <small class="text-muted" id="bodyHelp">Wiki Contents must be 10 or more characters in length. </small>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
         </form>
         <form action="/wikis/<%= wiki.id %>/"

      </main>

      <% include ../static/partials/baseScripts.ejs %>

   </body>

</html>
